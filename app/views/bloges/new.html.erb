<h1>new blog</h1>

<%= form_with model: @bloge do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @bloge.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :discription %><br>
    <%= form.textarea :discription %><br>
    <% @bloge.errors.full_messages_for(:discription).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>



